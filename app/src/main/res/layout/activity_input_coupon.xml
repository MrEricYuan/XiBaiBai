<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_marginTop="@dimen/dp_twenty"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:id="@+id/rule_layout"
        android:layout_marginRight="@dimen/dp_thirty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:orientation="horizontal">
        <ImageView
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ticket_rule_img"/>

        <TextView
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_five"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ticket_rule" />
    </LinearLayout>

    <EditText
        android:id="@+id/coupon_code_et"
        android:layout_marginTop="@dimen/dp_ten"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_sixty"
        android:textSize="@dimen/sp_eighteen"
        android:padding="@dimen/dp_five"
        android:layout_marginLeft="@dimen/dp_twenty"
        android:layout_marginRight="@dimen/dp_twenty"
        android:background="@drawable/input_bg"/>

    <Button
        android:id="@+id/coupon_submit_btn"
        android:layout_marginTop="@dimen/dp_thirty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="@string/input_coupon_submit"
        android:textSize="@dimen/sp_tweenty_two"
        android:layout_marginLeft="@dimen/dp_twenty"
        android:layout_marginRight="@dimen/dp_twenty"
        android:background="@drawable/btn_special_bg"/>


</LinearLayout>
