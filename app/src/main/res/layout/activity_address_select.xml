<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray_one">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/address_snap_rl"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_fourty_eight"
            android:background="@color/white"
            android:layout_marginTop="@dimen/dp_five">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerInParent="true"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/address_img1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/address_snap"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_sixteen"
                    android:layout_toRightOf="@+id/address_img1"
                    android:layout_marginLeft="@dimen/dp_eight"
                    android:text="使用临时位置"/>
            </LinearLayout>
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/address_home_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/dp_five"
            android:visibility="gone"
            android:background="@color/white">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_fourty_eight"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_eight"
                    android:src="@mipmap/address_home"/>
                <TextView
                    android:id="@+id/address_home_locate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_gravity="center_vertical"
                    android:textSize="@dimen/sp_sixteen"
                    android:layout_marginLeft="@dimen/dp_twelve"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_one"
                android:background="@mipmap/line_one"
                android:layout_marginLeft="@dimen/dp_eight"
                android:layout_marginRight="@dimen/dp_eight"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_fourty_eight"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_eight"
                    android:src="@mipmap/address_remark"/>
                <TextView
                    android:id="@+id/address_home_mark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_gravity="center_vertical"
                    android:textSize="@dimen/sp_sixteen"
                    android:layout_marginLeft="@dimen/dp_twelve"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/address_company_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/dp_five"
            android:visibility="gone"
            android:background="@color/white">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_fourty_eight"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_eight"
                    android:src="@mipmap/address_company"/>
                <TextView
                    android:id="@+id/address_company_locate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_gravity="center_vertical"
                    android:textSize="@dimen/sp_sixteen"
                    android:layout_marginLeft="@dimen/dp_twelve"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_one"
                android:background="@mipmap/line_one"
                android:layout_marginLeft="@dimen/dp_eight"
                android:layout_marginRight="@dimen/dp_eight"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_fourty_eight"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_eight"
                    android:src="@mipmap/address_remark"/>
                <TextView
                    android:id="@+id/address_company_mark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_gravity="center_vertical"
                    android:textSize="@dimen/sp_sixteen"
                    android:layout_marginLeft="@dimen/dp_twelve"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
