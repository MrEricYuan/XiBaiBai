<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="@dimen/dp_five"
    android:layout_height="@dimen/dp_hundred_twenty"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/item_diys_pic"
        android:layout_width="@dimen/dp_hundred"
        android:layout_height="@dimen/dp_hundred"
        android:src="@drawable/default_load_big"
        android:layout_centerVertical="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_ten"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_two">
            <TextView
                android:id="@+id/item_diys_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_seventeen"
                android:text="金属条上光"/>
            <TextView
                android:id="@+id/item_diys_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_seventeen"
                android:layout_alignParentRight="true"
                android:text="9元"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/item_diys_introduce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_fifteen"
            android:layout_marginTop="@dimen/dp_two"
            android:maxLines="3"
            android:ellipsize="end"
            android:text="金属条上光"/>
    </LinearLayout>
</LinearLayout>
