<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >


    <com.jph.xibaibai.adapter.MyPhotoViewPager
        android:id="@+id/big_img_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </com.jph.xibaibai.adapter.MyPhotoViewPager>

    <LinearLayout
        android:id="@+id/big_img_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal" >
    </LinearLayout>
    <RelativeLayout
        android:layout_marginTop="@dimen/dp_thirty"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_thirty"
        android:layout_width="@dimen/dp_sixty"
        android:layout_height="@dimen/dp_sixty"
        android:background="@mipmap/img_index_bg">
        <LinearLayout
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/current_index"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="20"
                android:textSize="@dimen/sp_tweenty_one"/>
            <TextView
                android:id="@+id/total_index"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text=" /20"
                android:textSize="@dimen/sp_seventeen"/>
        </LinearLayout>

    </RelativeLayout>



</RelativeLayout>