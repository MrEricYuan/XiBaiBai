<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include
        android:id="@+id/no_sort_layout"
        layout="@layout/item_diy_onetype"/>
    <LinearLayout
        android:id="@+id/sort_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingLeft="@dimen/dp_ten"
        android:orientation="vertical">
        <TextView
            android:id="@+id/beauty_product_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_fourty_eight"
            android:text=""
            android:gravity="center_vertical"
            android:textSize="@dimen/sp_sixteen"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_one"
            android:background="@mipmap/line_one"/>
        <RelativeLayout
            android:id="@+id/beauty_genalcar_rl"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_fourty_eight"
            android:layout_marginLeft="@dimen/dp_fifteen">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_sixteen"
                android:layout_centerVertical="true"
                android:text="轿车"/>
            <RelativeLayout
                android:layout_width="@dimen/dp_hundred"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_ten">
                <TextView
                    android:id="@+id/beauty_genalcar_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_sixteen"
                    android:layout_centerVertical="true"
                    android:text=""/>
                <ImageView
                    android:id="@+id/beauty_genalcar_check"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/place_unchecked"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_one"
            android:layout_marginLeft="@dimen/dp_fifteen"
            android:background="@mipmap/line_one"/>
        <RelativeLayout
            android:id="@+id/beauty_bigcar_rl"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_fourty_eight"
            android:layout_marginLeft="@dimen/dp_fifteen">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_sixteen"
                android:layout_centerVertical="true"
                android:text="SUP/MPV"/>
            <RelativeLayout
                android:layout_width="@dimen/dp_hundred"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_ten">
                <TextView
                    android:id="@+id/beauty_bigcar_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_sixteen"
                    android:layout_centerVertical="true"
                    android:text=""/>
                <ImageView
                    android:id="@+id/beauty_bigcar_check"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/place_unchecked"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
