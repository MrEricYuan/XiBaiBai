<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="left"
    android:background="@mipmap/menu_bg"
    android:clickable="true"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dp_twenty"
    android:paddingRight="@dimen/dp_twenty"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/menu_user_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/dp_eight"
            android:layout_marginTop="@dimen/dp_fourty"
            android:orientation="horizontal">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/main_img_head"
                android:layout_width="@dimen/dp_sixty"
                android:layout_height="@dimen/dp_sixty"
                android:src="@mipmap/menu_head_default"
                app:riv_oval="true" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_fifteen"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/menu_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/menu_head_img"
                    android:text="忧桑的汪汪"
                    android:textSize="@dimen/sp_sixteen" />

                <TextView
                    android:id="@+id/menu_user_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/menu_head_img"
                    android:layout_marginTop="@dimen/dp_five"
                    android:text="18602854129"
                    android:textSize="@dimen/sp_sixteen" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_one"
            android:layout_marginLeft="@dimen/dp_ten"
            android:layout_marginTop="@dimen/dp_thirty"
            android:background="@mipmap/menu_spilt_img" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_ten">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/menu_order_layout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_fourty"
                    android:layout_marginLeft="@dimen/dp_fifteen"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:src="@mipmap/menu_order_img" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dp_twenty"
                        android:text="@string/menu_my_order"
                        android:textSize="@dimen/sp_sixteen" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/menu_car_layout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_fourty"
                    android:layout_marginLeft="@dimen/dp_fifteen"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:src="@mipmap/menu_car_img" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="19dp"
                        android:text="@string/menu_regular_car"
                        android:textSize="@dimen/sp_sixteen" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/menu_addr_layout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_fourty"
                    android:layout_marginLeft="@dimen/dp_fifteen"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:src="@mipmap/menu_addr_img" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dp_twenty"
                        android:text="@string/menu_regular_addr"
                        android:textSize="@dimen/sp_sixteen" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/menu_ticket_layout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_fourty"
                    android:layout_marginLeft="@dimen/dp_fifteen"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:src="@mipmap/menu_ticket_img" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dp_twenty"
                        android:text="@string/menu_my_coupons"
                        android:textSize="@dimen/sp_sixteen" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_one"
            android:layout_marginLeft="@dimen/dp_ten"
            android:background="@mipmap/menu_spilt_img" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_ten">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/menu_feedback_layout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_fourty"
                    android:layout_marginLeft="@dimen/dp_fifteen"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:src="@mipmap/menu_feedback_img" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dp_twenty"
                        android:text="@string/menu_feedback"
                        android:textSize="@dimen/sp_sixteen" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/menu_contact_layout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_fourty"
                    android:layout_marginLeft="@dimen/dp_fifteen"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:src="@mipmap/menu_contact_img" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dp_twenty"
                        android:text="@string/menu_contact"
                        android:textSize="@dimen/sp_sixteen" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/menu_about_layout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_fourty"
                    android:layout_marginLeft="@dimen/dp_fifteen"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:src="@mipmap/menu_about" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dp_twenty"
                        android:text="@string/menu_about"
                        android:textSize="@dimen/sp_sixteen" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_one"
            android:layout_marginLeft="@dimen/dp_ten"
            android:background="@mipmap/menu_spilt_img" />

        <TextView
            android:id="@+id/menu_soft_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_fifteen"
            android:text="v1.0"
            android:textSize="@dimen/sp_seventeen" />
    </LinearLayout>
</ScrollView>
