<?xml version="1.0" encoding="utf-8"?><!-- 一级框架页 -->
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/home_drawerlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/home_title" />

        <ScrollView
            android:id="@+id/home_scroll_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bg_gray"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_two_hundred_ten"
                    android:background="@color/white">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_hundred_fifty">

                        <com.jph.xibaibai.mview.MyViewPager
                            android:id="@+id/home_top_ads"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                        <LinearLayout
                            android:id="@+id/home_points"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|center_horizontal"
                            android:layout_marginBottom="@dimen/dp_five"
                            android:orientation="horizontal" />
                    </FrameLayout>

                    <TextView
                        android:id="@+id/home_washcar_btn"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_fourty_five"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="@dimen/dp_seven"
                        android:layout_marginLeft="@dimen/dp_fourty"
                        android:layout_marginRight="@dimen/dp_fourty"
                        android:background="@drawable/home_onkey_wash"
                        android:gravity="center"
                        android:text="一键洗车"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_seventeen" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="right"
                        android:layout_marginBottom="@dimen/dp_eight"
                        android:layout_marginRight="@dimen/dp_fourty"
                        android:src="@mipmap/home_baibai" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_two_hundred_seventy"
                    android:layout_marginTop="@dimen/dp_ten"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_one"
                        android:background="@mipmap/line_one" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_fourty_five"
                        android:background="@color/white"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/dp_ten"
                        android:text="深度美容"
                        android:textColor="@color/them_color"
                        android:textSize="@dimen/sp_eighteen" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_one"
                        android:background="@color/bg_gray" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_zero"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:id="@+id/home_inspa_rl"
                            android:layout_width="@dimen/dp_zero"
                            android:layout_height="match_parent"
                            android:layout_weight="3">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp_ten"
                                android:layout_marginTop="@dimen/dp_ten"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/home_inspa_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="内饰SPA"
                                    android:textSize="@dimen/sp_seventeen" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/dp_five"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/home_inspa_price"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="158元起"
                                        android:textSize="@dimen/sp_seventeen" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="起"
                                        android:textSize="@dimen/sp_fourteen" />
                                </LinearLayout>
                            </LinearLayout>

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_alignParentRight="true"
                                android:layout_marginBottom="@dimen/dp_ten"
                                android:layout_marginRight="@dimen/dp_ten"
                                android:src="@mipmap/home_inspa" />
                        </RelativeLayout>

                        <View
                            android:layout_width="@dimen/dp_one"
                            android:layout_height="match_parent"
                            android:background="@color/bg_gray" />

                        <RelativeLayout
                            android:id="@+id/home_crystal_wax_rl"
                            android:layout_width="@dimen/dp_zero"
                            android:layout_height="match_parent"
                            android:layout_weight="2">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp_ten"
                                android:layout_marginTop="@dimen/dp_ten"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/home_crystal_wax_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="精致水晶油蜡"
                                    android:textSize="@dimen/sp_seventeen" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/dp_five"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/home_crystal_wax_price"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="88元"
                                        android:textSize="@dimen/sp_seventeen" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="起"
                                        android:textSize="@dimen/sp_fourteen" />
                                </LinearLayout>

                            </LinearLayout>

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_alignParentRight="true"
                                android:layout_marginBottom="@dimen/dp_ten"
                                android:layout_marginRight="@dimen/dp_ten"
                                android:src="@mipmap/home_crystal_wax" />
                        </RelativeLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_one"
                        android:background="@color/bg_gray" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_zero"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:id="@+id/home_engine_wash_rl"
                            android:layout_width="@dimen/dp_zero"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp_ten"
                                android:layout_marginTop="@dimen/dp_ten"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/home_engine_wash_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="发动机舱干洗"
                                    android:textSize="@dimen/sp_seventeen" />

                                <TextView
                                    android:id="@+id/home_engine_wash_price"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/dp_five"
                                    android:text="158元"
                                    android:textSize="@dimen/sp_seventeen" />
                            </LinearLayout>

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_alignParentRight="true"
                                android:layout_marginBottom="@dimen/dp_ten"
                                android:layout_marginRight="@dimen/dp_ten"
                                android:src="@mipmap/home_engine_wash" />
                        </RelativeLayout>

                        <View
                            android:layout_width="@dimen/dp_one"
                            android:layout_height="match_parent"
                            android:background="@color/bg_gray" />

                        <RelativeLayout
                            android:id="@+id/home_coating_rl"
                            android:layout_width="@dimen/dp_zero"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp_ten"
                                android:layout_marginTop="@dimen/dp_ten"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/home_coating_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="皮革上光镀膜"
                                    android:textSize="@dimen/sp_seventeen" />

                                <TextView
                                    android:id="@+id/home_coating_price"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/dp_five"
                                    android:text="158元"
                                    android:textSize="@dimen/sp_seventeen" />
                            </LinearLayout>

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_alignParentRight="true"
                                android:layout_marginBottom="@dimen/dp_ten"
                                android:layout_marginRight="@dimen/dp_ten"
                                android:src="@mipmap/home_coating" />
                        </RelativeLayout>

                        <View
                            android:layout_width="@dimen/dp_one"
                            android:layout_height="match_parent"
                            android:background="@color/bg_gray" />

                        <RelativeLayout
                            android:id="@+id/home_plant_rl"
                            android:layout_width="@dimen/dp_zero"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp_ten"
                                android:layout_marginTop="@dimen/dp_ten"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/home_plant_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="天然植物油蜡"
                                    android:textSize="@dimen/sp_seventeen" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/dp_five"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/home_plant_price"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="88元"
                                        android:textSize="@dimen/sp_seventeen" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="起"
                                        android:textSize="@dimen/sp_fourteen" />
                                </LinearLayout>

                            </LinearLayout>

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_alignParentRight="true"
                                android:layout_marginBottom="@dimen/dp_ten"
                                android:layout_marginRight="@dimen/dp_ten"
                                android:src="@mipmap/home_plant_wax" />
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_one"
                    android:background="@color/bg_gray" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_one"
                    android:layout_marginTop="@dimen/dp_ten"
                    android:background="@color/bg_gray" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_fourty_eight"
                    android:orientation="horizontal"
                    android:background="@color/white">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:paddingLeft="@dimen/dp_ten"
                            android:text="DIY组合"
                            android:textColor="@color/them_color"
                            android:textSize="@dimen/sp_eighteen" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:layout_gravity="bottom"
                            android:paddingLeft="@dimen/dp_eight"
                            android:text="需要选择洗车哦"
                            android:textColor="@color/them_color"
                            android:textSize="@dimen/sp_fifteen" />
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_one"
                    android:background="@color/bg_gray" />
                <ListView
                    android:id="@+id/home_diyproduct_lv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:scrollbars="none" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <include
        android:id="@+id/home_v_drawerleft"
        layout="@layout/menu_content_layout" />
</android.support.v4.widget.DrawerLayout>
