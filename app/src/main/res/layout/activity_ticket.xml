<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ticket_rule_layout"
        android:layout_marginTop="@dimen/dp_ten"
        android:layout_marginRight="@dimen/dp_thirty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ticket_rule_img"/>

        <TextView
            android:layout_marginLeft="@dimen/dp_five"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ticket_rule" />
    </LinearLayout>

    <ListView
        android:id="@+id/ticket_lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></ListView>

</LinearLayout>
