<?xml version="1.0" encoding="utf-8"?><!-- 产品 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:paddingTop="@dimen/dp_ten">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/dp_ten">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_five"
                android:src="@mipmap/mycar_img" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_ten"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/itemcar_txt_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="川A 123456"
                    android:textColor="@color/black_one"
                    android:textSize="@dimen/sp_sixteen" />

                <TextView
                    android:id="@+id/itemcar_txt_platenum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_two"
                    android:text="奥迪 白色 轿车"
                    android:textColor="@color/black_one"
                    android:textSize="@dimen/sp_sixteen" />
            </LinearLayout>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_fifteen"
            android:layout_marginRight="@dimen/dp_fifteen"
            android:layout_marginBottom="@dimen/dp_eight">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/itemcar_check_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/mycar_checked"/>

                <TextView
                    android:id="@+id/itemcar_txt_default"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="设为默认"
                    android:layout_marginLeft="@dimen/dp_five"
                    android:textColor="@color/black_two"
                    android:layout_gravity="center_vertical"
                    android:textSize="@dimen/sp_sixteen"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/itemcar_edit_tv"
                    android:layout_width="@dimen/dp_sixty"
                    android:layout_height="@dimen/dp_thirty"
                    android:background="@drawable/mycar_edit_bg"
                    android:gravity="center"
                    android:text="编辑"/>
                <TextView
                    android:id="@+id/itemcar_delete_tv"
                    android:layout_width="@dimen/dp_sixty"
                    android:layout_height="@dimen/dp_thirty"
                    android:layout_marginLeft="@dimen/dp_fifteen"
                    android:background="@drawable/mycar_edit_bg"
                    android:gravity="center"
                    android:text="删除"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>