<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">
        <RelativeLayout

            android:layout_width="match_parent"
            android:paddingRight="@dimen/dp_twenty"
            android:paddingLeft="@dimen/dp_twenty"
            android:paddingTop="@dimen/dp_fifteen"
            android:paddingBottom="@dimen/dp_fifteen"
            android:layout_height="wrap_content">
            <TextView
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_seventeen"
                android:text="@string/comment_label"/>
            <RatingBar
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:id="@+id/coment_level"
                style="@style/roomRatingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:stepSize="1"
                android:numStars="5" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_one"
            android:background="@mipmap/line_one"/>
        <EditText
            android:id="@+id/comment_content_et"
            android:padding="@dimen/dp_five"
            android:layout_marginLeft="@dimen/dp_thirty"
            android:layout_marginRight="@dimen/dp_thirty"
            android:layout_width="match_parent"
            android:hint="@string/comment_hint"
            android:gravity="top"
            android:textSize="@dimen/sp_sixteen"
            android:textColorHint="@color/hint_color"
            android:layout_height="@dimen/dp_hundred_sixty"
            android:background="@null"/>
        <LinearLayout
            android:layout_marginRight="@dimen/dp_twenty"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/dp_five"
            android:layout_marginTop="@dimen/dp_five">
            <TextView
                android:id="@+id/comment_text_count"
                android:textColor="@color/hint_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="@dimen/sp_fifteen"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/500"
                android:textColor="@color/hint_color"
                android:textSize="@dimen/sp_fifteen"/>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/comment_submit_btn"
        android:layout_marginLeft="@dimen/dp_fourty"
        android:layout_marginRight="@dimen/dp_fourty"
        android:layout_marginTop="@dimen/dp_sixty"
        android:textColor="@color/white"
        android:background="@drawable/btn_special_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_tweenty"
        android:text="@string/comment_submit"/>

</LinearLayout>
