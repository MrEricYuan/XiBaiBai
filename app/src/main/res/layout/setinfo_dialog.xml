<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_transp">

    <RelativeLayout
        android:layout_width="@dimen/dp_two_hundred_sixty"
        android:layout_height="@dimen/dp_hundred_fourty"
        android:layout_gravity="center"
        android:background="@drawable/white_bg">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/dp_fifty">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/my_dialog_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/my_dialog_tips"
                    android:layout_gravity="center_horizontal"
                    android:text=""
                    android:textColor="@color/black_two"
                    android:textSize="@dimen/sp_sixteen" />
                <TextView
                    android:id="@+id/my_dialog_message1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/dp_five"
                    android:layout_centerHorizontal="true"
                    android:text=""
                    android:textColor="@color/black_two"
                    android:textSize="@dimen/sp_sixteen" />
            </LinearLayout>
        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_fifty"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/dp_twenty"
            android:layout_marginRight="@dimen/dp_twenty"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="@dimen/dp_zero"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/dialog_cancel_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/setcar_cancel"
                    android:text="取消"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:layout_centerHorizontal="true"
                    android:textSize="@dimen/sp_sixteen"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="@dimen/dp_zero"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/dialog_sure_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/setcar_go"
                    android:text="确定"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:layout_centerHorizontal="true"
                    android:textSize="@dimen/sp_sixteen"/>
            </RelativeLayout>

        </LinearLayout>
    </RelativeLayout>

</FrameLayout>
